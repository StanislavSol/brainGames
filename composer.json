{
    "name": "hexlet/code",
    "description": "A project that implements five intellectual games of different levels of complexity. The rules are common to all games. To win the game, you need to answer three questions.",
    "bin": [
        "bin/brain-games",
        "bin/brain-even",
        "bin/brain-calc",
        "bin/brain-gcd",
        "bin/brain-progression",
        "bin/brain-prime"
    ],
    "autoload": {
        "psr-4": {
            "Hexlet\\Code\\": "src/"
        },
        "files": [
            "src/Cli.php",
            "src/Engine.php",
            "src/Games/even.php",
            "src/Games/calc.php",
            "src/Games/gcd.php",
            "src/Games/progression.php",
            "src/Games/prime.php"
        ]
    },
    "require": {
        "wp-cli/php-cli-tools": "^0.12.1"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.11"
    }
}
